.container
  h1 Season {{id}}
  table.table.table-striped.table-hover.table-bordered
    tr
      th
      th Name
      th Description
      th Note 
      th Played By
    tr(ng-repeat='episode in data')
      td
        span(ng-attr-title="episode.playedIfno" ng-show="episode.playedInfo").glyphicon.glyphicon-ok
      td
        a(ui-sref='game({ id: episode.id })') {{ episode.name }}
      td {{episode.description}}
      td {{episode.note}}
      td {{episode.playedInfo}}
        
